<!--This script builds a zip for Teiid Server Installation -->
<assembly>
  
  <id>jboss-as7-dist</id>
  
  <formats>
    <format>zip</format>
  </formats>
  
  <includeBaseDirectory>false</includeBaseDirectory>
  <baseDirectory>modules</baseDirectory>

 <fileSets>
    <fileSet>
        <directory>kits/jboss-as7/modules</directory>
        <outputDirectory>/modules/system/layers/base</outputDirectory>     
        <filtered>true</filtered> 
        <includes>
          <include>**/*</include>
        </includes>   
    </fileSet>    
  </fileSets>
  
  <dependencySets>
    <dependencySet>
      <outputDirectory>/modules/system/layers/base/org/jboss/teiid/translator/exec/main</outputDirectory>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <!-- to exclude dependencies 
      <includes>
        <include>${group}:translator-ExecTranslator</include>
      </includes>
      -->
    </dependencySet>
  </dependencySets>  
  
</assembly>
